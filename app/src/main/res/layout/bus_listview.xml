<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/bg_listview"
android:orientation="horizontal"
android:padding="5dip"
android:layout_marginBottom="10dp">

<!--  ListRow Left sied Thumbnail image -->
<LinearLayout android:id="@+id/bus_thumbnail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dip"
    android:layout_alignParentLeft="true"
    android:background="@drawable/oval_shape"
    android:layout_marginRight="5dip">

    <ImageView
        android:id="@+id/bus_image"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/ic_bus"/>

</LinearLayout>

<!-- Title Of Song-->
<TextView
    android:id="@+id/bus_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/bus_thumbnail"
    android:layout_toRightOf="@+id/bus_thumbnail"
    android:text="Bus number."
    android:textColor="#040404"
    android:typeface="sans"
    android:textSize="15dip"
    android:textStyle="bold"/>

<!-- Artist Name -->
<TextView
    android:id="@+id/bus_infor"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/bus_title"
    android:textColor="#343434"
    android:textSize="12dip"
    android:textStyle="italic"
    android:layout_marginTop="1dip"
    android:layout_toRightOf="@+id/bus_thumbnail"
    android:text="..." />

<!-- Rightend Duration -->
<TextView
    android:id="@+id/distance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@id/bus_station_title"
    android:gravity="right"
    android:text="..."
    android:layout_marginRight="5dip"
    android:textSize="10dip"
    android:textColor="#102cc9"
    android:textStyle="bold"/>
</RelativeLayout>